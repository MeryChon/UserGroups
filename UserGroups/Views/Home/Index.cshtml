@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<a class="btn btn-secondary" asp-controller="Home" asp-action="AddGroup">Create New</a>

<div class="row">
    @foreach (var group in Model.Groups)
    {
        <div class="card" style="width: 15rem; margin: 5px 1rem;">
            <img src="@group.CoverImageUrl" class="card-img-top" alt="Group Cover Image">
            <div class="card-body">
                <h5 class="card-title">@group.Name</h5>
                <p class="card-text">@group.Description</p>
                <small>@group.NumMembers members</small><br />
                <a asp-controller="Home" asp-action="GroupDetail" asp-route-id ="@group.Id"class ="btn btn-primary">View</a>
            </div>
        </div>

    }
</div>


